<h1>Messages</h1>

<table class="table">
  <thead>
  <tr>
    <th>User</th>
    <th>Content</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @messages.each do |message| %>
    <tr>
      <td><%= message.user.name %></td>
      <td><%= message.content %></td>
      <td>
        <%= link_to 'Show', message_path(message), class: 'btn btn-info' %>
        <%= link_to 'Destroy', message_path(message), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
