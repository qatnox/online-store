<h1>Chats</h1>

<table class="table">
  <thead>
  <tr>
    <th>Customer</th>
    <th>Consultant</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @chats.each do |chat| %>
    <tr>
      <td><%= chat.customer.name %></td>
      <td><%= chat.consultant.name %></td>
      <td>
        <%= link_to 'Show', chat_path(chat), class: 'btn btn-info' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
