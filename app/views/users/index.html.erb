<h1>Users</h1>

<%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Role</th>
    <th>Birth Date</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td><%= user.birth_date %></td>
      <td>
        <%= link_to 'Show', user_path(user), class: 'btn btn-info' %>
        <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning' %>
        <%= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
