<h1>Your Cart</h1>

<table class="table">
  <thead>
  <tr>
    <th>Good</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Total Price</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @cart.cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.good.name %></td>
      <td><%= cart_item.quantity %></td>
      <td><%= number_to_currency(cart_item.good.price) %></td>
      <td><%= number_to_currency(cart_item.total_price) %></td>
      <td>
        <%= link_to 'Remove', cart_item_path(cart_item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<p>
  <strong>Total Price:</strong>
  <%= number_to_currency(@cart.total_price) %>
</p>
